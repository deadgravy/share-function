{
  "extends": [
    "airbnb",
    "airbnb-typescript",
    "next",
    "next/core-web-vitals",
    "prettier"
  ],
  "ignorePatterns": ["!**/*", ".next/**/*"],
  "parserOptions": {
    "project": "tsconfig.json"
  },
  "rules": {
    "no-void": "off",
    "semi": "off",
    "no-plusplus": "off",
    "@next/next/no-html-link-for-pages": "error",
    "react/destructuring-assignment": "off",
    "@typescript-eslint/semi": "off",
    "@typescript-eslint/consistent-type-definitions": "off"
  }
}
